<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >
    
    <ImageView
        android:id="@+id/to_do_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/important_emergency"
     	android:scaleType="fitXY"    
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        >
        <TextView
	        android:id="@+id/to_do_item_content"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:maxLines="2"
	        android:ellipsize="end"
	        android:textSize="20sp"
	        android:text="测试内容，这是重要的测试内容啊，请不要乱放弃"
	        />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:baselineAligned="false"
	        >
	        
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            >
	            <TextView 
	                android:id="@+id/to_do_create_time"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:maxLines="1"
	                android:ellipsize="end"
	                android:text="Create : 2015-10-22 14:29:48"
	                />
	            <TextView 
	                android:id="@+id/to_do_deadline"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:maxLines="1"
	                android:ellipsize="end"
	                android:text="DeadLine : 2015-10-25 18:49:59"
	                />
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="15dp"
	            >
	            <TextView 
	                android:id="@+id/to_do_importance"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="right|center"
	                android:maxLines="1"
	                android:ellipsize="end"
	                android:text="重要"
	                />
	            <TextView 
	                android:id="@+id/to_do_emergency"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="right|center"
	                android:maxLines="1"
	                android:ellipsize="end"
	                android:text="紧急"
	                />
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
