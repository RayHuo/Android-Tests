<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/article_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/satellite_black"
        android:layout_marginLeft="10dp"
        >
    </ImageView>
    
    <LinearLayout 
        android:id="@+id/article_detail"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/article_image"
        android:layout_marginLeft="10dp" 
        android:gravity="center|left"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/m_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" 
            android:layout_marginTop="0dp"
            android:text="waht"
            >
        </TextView>
        <TextView
            android:id="@+id/m_article_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="15sp" 
            android:textColor="#C0C0C0"
            android:text="waht"
            >
        </TextView>
        
        <LinearLayout
            android:id="@+id/article_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            
            <TextView
	            android:id="@+id/m_article_author"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:textColor="#C0C0C0"
	            android:text="jack"
	            >
	        </TextView>
	        
            <TextView
                android:id="@+id/m_article_logdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
	            android:textColor="#C0C0C0"
	            android:layout_marginLeft="10dp"
	            android:text="2015-10-08"
                >
            </TextView>
            
            <TextView
                android:id="@+id/zhanwei"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
			</TextView>
            
            <ImageView
                android:id="@+id/article_collection_img"
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:src="@drawable/article_collect_not"
                >
            </ImageView>
            
            <TextView
                android:id="@+id/article_collection_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
	            android:textColor="#C0C0C0"
	            android:text="110"
	            android:layout_marginLeft="5dp">
            </TextView>
            
            <ImageView
                android:id="@+id/article_zan_img"
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:src="@drawable/article_zan"
                android:layout_marginLeft="10dp"
                >
            </ImageView>
            
            <TextView
                android:id="@+id/article_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
	            android:textColor="#C0C0C0"
	            android:text="110"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="10dp"
	            >
            </TextView>
        </LinearLayout>
        
        
    </LinearLayout>

    <!-- <ImageView
        android:id="@+id/goto_article_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrow_right_black" /> -->

</LinearLayout>