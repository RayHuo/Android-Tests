<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/article_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:src="@drawable/satellite_black"
        >
    </ImageView>
    
    <LinearLayout 
        android:id="@+id/article_detail"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/article_image"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/m_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" >
        </TextView>
        <TextView
            android:id="@+id/m_article_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp" >
        </TextView>
        <TextView
            android:id="@+id/m_article_authorLogdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/goto_article_arrow"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/arrow_right_black" />

</RelativeLayout>
